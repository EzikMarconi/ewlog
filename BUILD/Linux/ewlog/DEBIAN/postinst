#!/bin/sh
set -e
DIR=$HOME/EWLog
EWDIR=/usr/share/ewlog
# Automatically added by dh_icons
if which update-icon-caches >/dev/null 2>&1 ; then
	update-icon-caches /usr/share/icons/ewlog.png
fi

if [ ! -d "$DIR" ]; then
    # Создать папку, только если ее не было
    mkdir $DIR
fi

chmod 777 $DIR
cp -rf $EWDIR/callbook.db $DIR
cp -rf $EWDIR/serviceLOG.db $DIR
chmod a+w $DIR/callbook.db
chmod a+w $DIR/serviceLOG.db

# End automatically added section


